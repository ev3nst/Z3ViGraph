<!DOCTYPE html>
@{
	var currentCulture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>().RequestCulture.UICulture.Name;
}
<html lang="@currentCulture">

<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"] - ViGraph</title>
	<meta name="description" content="@ViewData["Description"]" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<link rel="canonical" href="@Context.Request.Host@Context.Request.Path" />
	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />

	@await RenderSectionAsync("HeadBefore", required: false)

	<link href="~/assets/plugins/global/plugins.bundle.css?v=7.2.8" rel="stylesheet" type="text/css" />
	<link href="~/assets/css/style.bundle.css?v=7.2.8" rel="stylesheet" type="text/css" />

	@await RenderSectionAsync("HeadAfter", required: false)

	<link rel="shortcut icon" href="~/assets/media/logos/favicon.ico" />
</head>

<body id="kt_body" class="header-static subheader-enabled sidebar-enabled page-loading">
	<div class="d-flex flex-column flex-root">
		<div class="d-flex flex-row flex-column-fluid page">
			<partial name="_Aside.cshtml" />

			<div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
				<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
					<!-- Sub Header -->
					@await RenderSectionAsync("SubHeader", required: false)

					<div class="d-flex flex-column-fluid">
						<div class="container-fluid">
							@RenderBody()
						</div>
					</div>
				</div>
				<partial name="_Footer.cshtml" />
			</div>

			<!-- Aside Secondary -->
			@await RenderSectionAsync("AdvancedSearch", required: false)
		</div>
	</div>

	<div id="kt_scrolltop" class="scrolltop">
		<span class="svg-icon">
			<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px"
				height="24px" viewBox="0 0 24 24" version="1.1">
				<g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
					<polygon points="0 0 24 0 24 24 0 24" />
					<rect fill="#000000" opacity="0.3" x="11" y="10" width="2" height="10" rx="1" />
					<path d="M6.70710678,12.7071068 C6.31658249,13.0976311 5.68341751,13.0976311 5.29289322,12.7071068 C4.90236893,12.3165825 4.90236893,11.6834175 5.29289322,11.2928932 L11.2928932,5.29289322 C11.6714722,4.91431428 12.2810586,4.90106866 12.6757246,5.26284586 L18.6757246,10.7628459 C19.0828436,11.1360383 19.1103465,11.7686056 18.7371541,12.1757246 C18.3639617,12.5828436 17.7313944,12.6103465 17.3242754,12.2371541 L12.0300757,7.38413782 L6.70710678,12.7071068 Z" fill="#000000" fill-rule="nonzero" />
				</g>
			</svg>
		</span>
	</div>

	<partial name="_JSVariables.cshtml" />
	<script src="~/assets/plugins/global/plugins.bundle.js?v=7.2.8"></script>
	<script src="~/assets/js/scripts.bundle.js?v=7.2.8"></script>
	<partial name="_HelperScripts.cshtml" />

	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>