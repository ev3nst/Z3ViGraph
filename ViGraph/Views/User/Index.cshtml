@model ViGraph.ViewModels.UsersVM

@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Authorization
@using ViGraph.Utility

@inject IViewLocalizer localizer
@inject IHtmlLocalizer<SharedResources> sharedLocalizer
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Users";
}

@section SubHeader {
<div id="kt_subheader" class="subheader py-2 py-lg-4 subheader-transparent">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-2">
            <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">@localizer["users_header"]</h5>
            <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-5 bg-gray-200"></div>
            <div id="kt_subheader_search" class="d-flex align-items-center">
                <span id="kt_subheader_total" class="text-dark-50 font-weight-bold">@localizer["users_desc"]</span>
            </div>
        </div>

        @if ((AuthorizationService.AuthorizeAsync(User, "AppUser.Create")).Result.Succeeded) {
        <div class="d-flex align-items-center">
            <a href="#" class="btn btn-sm btn-primary font-weight-bolder">
                <span class="svg-icon svg-icon-md">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px"
                        height="24px" viewBox="0 0 24 24" version="1.1">
                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <rect x="0" y="0" width="24" height="24" />
                            <circle fill="#000000" cx="9" cy="15" r="6" />
