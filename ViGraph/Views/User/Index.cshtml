            </h3>
        </div>
        <div class="card-toolbar">
            <partial name="~/Views/Shared/Partials/_DataTableButtons.cshtml" />
        </div>
    </div>
    <div class="card-body p-0">
        <div class="tab-content min-h-lg-400px">
            <div
                class="tab-pane active show px-7 pagination-bottom pb-8"
                id="user_report_view"
                role="tabpanel">
                <table id="kt_datatable_user_report" class="table table-head-custom vertical-table"></table>
            </div>
            <div
                class="tab-pane show px-7 pagination-bottom pb-8"
                id="user_trash_bin"
                role="tabpanel">
                <table id="kt_datatable_user_trash" class="table table-head-custom vertical-table"></table>
            </div>
        </div>
    </div>
</div>

@section AdvancedSearch {
<div class="sidebar sidebar-right d-flex flex-row-auto flex-column" id="kt_sidebar">
    <div class="sidebar-header flex-column-auto pt-5 pt-lg-19 pb-5 px-5 px-lg-8">

        <h6>@sharedLocalizer["advanced_search"]</h6>
        <div style="border-color: #e6ddd3;" class="separator separator-dashed my-5"></div>

        <div class="d-flex">
            <div id="kt_quick_search_inline" class="quick-search quick-search-inline flex-grow-1">
                <form method="get" class="quick-search-form">
                    <div class="input-group rounded bg-light">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <span class="svg-icon svg-icon-lg">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                                        width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                            <rect x="0" y="0" width="24" height="24"></rect>
                                            <path
                                                d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z"
                                                fill="#000000" fill-rule="nonzero" opacity="0.3"></path>
                                            <path
                                                d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z"
                                                fill="#000000" fill-rule="nonzero"></path>
                                        </g>
                                    </svg>
                                </span>
                            </span>
                        </div>

                        <input id="quick_search" class="form-control form-control-primary h-40px" type="text"
                            name="quickSearch" value="@(Context.Request.Query["quickSearch"])"
                            placeholder="@sharedLocalizer["search_placeholder"]" />

                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="quick-search-close ki ki-close icon-sm text-muted"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>

            <div data-toggle="tooltip" title="" data-placement="left" data-original-title="@sharedLocalizer["reset"]">
                <a href="javascript:;" class="btn btn-icon btn-light-danger ml-3 h-40px w-40px flex-shrink-0"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="svg-icon svg-icon-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px"
                            height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <rect x="0" y="0" width="24" height="24"></rect>
                                <rect fill="#000000" x="5" y="4" width="6" height="16" rx="1.5"></rect>
                                <rect fill="#000000" opacity="0.3" x="13" y="4" width="6" height="16" rx="1.5"></rect>
                            </g>
                        </svg>
                    </span>
                </a>
            </div>

        </div>
    </div>
    <div class="sidebar-content flex-column-fluid pb-10 pt-9 px-5 px-lg-10">
        <form id="advanced_search_form">
            <div class="form-group reduced-margin">
                <label class="font-weight-bold">
                    @localizer["user"] @sharedLocalizer["id"]:
                </label>
                <input class="form-control" type="number" name="Id" value="@(Context.Request.Query["Id"])" placeholder="@sharedLocalizer["id_placeholder"]" />
            </div>
            <div class="form-group reduced-margin">
                <label class="font-weight-bold">
                    @localizer["fullname"]
                </label>
                <input class="form-control" type="text" name="FullName" placeholder="@localizer["fullname_placeholder"]"
                    value="@(Context.Request.Query["FullName"])" />
            </div>
            <div class="form-group reduced-margin">
                <label class="font-weight-bold">
                    @localizer["email"]
                </label>
                <input class="form-control" type="text" name="Email" placeholder="@localizer["email_placeholder"]"
                    value="@(Context.Request.Query["Email"])" />
            </div>


            <div class="form-group reduced-margin">
                <label class="font-weight-bold">
                    @sharedLocalizer["created_at"]:
                </label>
                <div class="input-group date">
                    <input class="form-control init-datepicker-custom" type="text" name="CreatedAt"
                        placeholder="@sharedLocalizer["created_at_placeholder"]"
                        value="@(Context.Request.Query["CreatedAt"])">
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="la la-calendar-check-o"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="form-group reduced-margin">
                <label class="font-weight-bold">
                    @sharedLocalizer["created_at_between"]:
                </label>
                <div class="input-group date">
                    <input class="form-control init-datepicker-custom" type="text" name="CreatedAtBetween"
                        placeholder="@sharedLocalizer["created_at_placeholder"]"
                        value="@(Context.Request.Query["CreatedAtBetween"])" />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="la la-calendar-check-o"></i>
                        </span>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
}

@section Scripts {
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js?v=@AppConfig.AssetsVersion.JS"></script>
    <script src="~/assets/js/custom/users/datatable-settings.js?v=@AppConfig.AssetsVersion.JS"></script>
    <script src="~/assets/js/custom/init-datatable.js?v=@AppConfig.AssetsVersion.JS"></script>
    <script>
        let columnsT = {
            Id: '@sharedLocalizer["id_short"]',
            FullName: '@localizer["fullname"]',
            Email: '@localizer["email"]',
            RoleName: '@localizer["role"]',
            CreatedAt: '@sharedLocalizer["created_at_short"]',
            DeletedAt: '@sharedLocalizer["deleted_at"]',
            ActionsHTML: '@sharedLocalizer["actions"]',
        }
    </script>
    <partial name="~/Views/User/IndexJS.cshtml" />
}
